{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "core/*": ["src/core/*"],
            "modules/*": ["src/modules/*"],
            "utils/*": ["src/utils/*"],
        },
        "lib": ["esnext"]
    },
    "exclude": ["node_modules", "src/**/test.ts"]
}
