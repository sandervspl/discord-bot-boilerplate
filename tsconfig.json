{
    "compilerOptions": {
        "noEmit": true,
        "target": "es6",
        "module": "esnext",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "src",
        "paths": {
            "core/*": ["core/*"],
            "modules/*": ["modules/*"],
            "utils/*": ["utils/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
